          <field name="project_paid" />
          <field name="project_margin" widget="percentage" />
          <!--          <field name="total_po_value"/>-->
          <!--          <field name="discount" />-->
          <!--          <field name="start_date" />-->
          <field name="due_date" />
          <field name="project_manager" />
          <field name="project_status" />
          <field name="payment_status" />

        </tree>
      </field>
    </record>
